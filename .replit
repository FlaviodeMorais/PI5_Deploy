modules = ["nodejs-20", "web", "bash"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run dev"]

[workflows]
runButton = "Development"

[[workflows.workflow]]
name = "Development"
author = 40607213
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Backup"
author = 40607213
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash backup_project.sh"

[[workflows.workflow]]
name = "Deploy"
author = 40607213
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash deploy.sh"

